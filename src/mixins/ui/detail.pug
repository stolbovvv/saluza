include ./icon.pug

mixin detail({ className, heading, content } = {})
	.detail(class=className)
		button.detail__button(type='button')
			span.detail__heading #{ heading }
			span.detail__arrow
				+icon({ icon: 'arrow-right' })
		.detail__body
			.detail__content
				if block
					block
				else
					p Нет контента
