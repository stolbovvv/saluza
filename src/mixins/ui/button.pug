include ./icon.pug

mixin button({ className, variant, icon, text, type = 'button', disabled } = {})
	- var classVariant = `${variant ? `button--${variant}` : ''}`;

	button.button(class=[className, classVariant], type=type, disabled=attributes.disabled)&attributes(attributes)
		if icon
			+icon({ className: `button__icon`, icon: icon })
		if text
			span.button__text #{ text }
