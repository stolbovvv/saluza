include ../mixins/ui/icon.pug
include ../mixins/ui/modal.pug
include ../mixins/ui/button.pug

doctype html

html(lang='ru')
	head
		block head

		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='mobile-web-app-capable', content='yes')
		meta(name='HandheldFriendly', content='true')
		meta(name='MobileOptimized', content='width')

		title #{ title || 'SALUZA' }

		link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png')
		link(rel='icon', type='image/png', sizes='32x32', href='/favicon-32x32.png')
		link(rel='icon', type='image/png', sizes='16x16', href='/favicon-16x16.png')
		link(rel='icon', type='image/svg+xml', href='/favicon.svg')
		link(rel='manifest', href='/site.webmanifest')
		link(rel='stylesheet', href='/assets/styles/vendor.css')
		link(rel='stylesheet', href='/assets/styles/main.css')

		block styles

	body
		.wrapper
			include ../includes/page-header.pug
			block content
			include ../includes/page-footer.pug

		#popover-contact-us.popover.js-popover
			.popover__dialog
				.popover__dialog-head
					h2.popover__dialog-heading Свяжитесь с нами
				.popover__dialog-body
					.popover__dialog-item
						.popover__dialog-item-head
							+icon({ className: 'popover__dialog-item-icon', icon: 'email' })
						.popover__dialog-item-body
							span.text-neutral-500 Email
							a.link(href='#') example@email.com
					.popover__dialog-item
						.popover__dialog-item-head
							+icon({ className: 'popover__dialog-item-icon', icon: 'phone' })
						.popover__dialog-item-body
							span.text-neutral-500 Телефон
							a.link(href='#') +7 (600) 500 43 21
				.popover__dialog-foot
					.popover__dialog-social
						a.icon-link.popover__social-link(href='#')
							+icon({ className: 'popover__social-icon', icon: 'facebook-logo' })
						a.icon-link.popover__social-link(href='#')
							+icon({ className: 'popover__social-icon', icon: 'instagram-logo' })
						a.icon-link.popover__social-link(href='#')
							+icon({ className: 'popover__social-icon', icon: 'pinterest-logo' })
						a.icon-link.popover__social-link(href='#')
							+icon({ className: 'popover__social-icon', icon: 'twitter-logo' })
						a.icon-link.popover__social-link(href='#')
							+icon({ className: 'popover__social-icon', icon: 'google-logo' })
			button.popover__button.js-popover__button
				+icon({ className: 'popover__button-icon popover__button-icon--open', icon: 'phone' })
				+icon({ className: 'popover__button-icon popover__button-icon--close', icon: 'x' })

		+modal({ size: 'small', heading: 'Избранное' })#add-favorite.js-modal
			p.text-base.text-neutral-500 Товар добавлен в избранное

		+modal({ size: 'small', heading: 'Избранное' })#del-favorite.js-modal
			p.text-base.text-neutral-500 Товар удален из избранного

		+modal({ size: 'small', heading: 'Корзина' })#add-cart.js-modal
			p.text-base.text-neutral-500 Товар добавлен в корзину

		+modal({ size: 'small', heading: 'Корзина' })#del-cart.js-modal
			p.text-base.text-neutral-500 Товар удален из корзины

		+modal({ heading: 'Подпишись, чтобы не упустить новое' })#del-cart.js-modal(data-timeout='30000')
			form.form-subscribe
				.form-subscribe__head
					img.form-subscribe__image(src='/assets/images/article-1.jpg')
				.form-subscribe__body
					p.text-neutral-500 Далеко-далеко за словесными горами в стране.
					.form-subscribe__fields
						.field
							input.input.field__input(type='text', name='user_full_name', placeholder='ФИО', required)
						.field
							input.input.field__input(type='email', name='user_email', placeholder='E-mail', required)
					+button({ className: 'form-subscribe__submit-button', type: 'submit', text: 'Подписаться' })
					p.text-xs Нажимая кнопку отправить, я соглашаюсь с#{ ' ' }
						a(href='/privacy-policy.html') политикой конфиденциальности

		script(src='/assets/scripts/vendor.js')
		script(src='/assets/scripts/index.js')
